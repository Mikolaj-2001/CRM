<div class="container-add-action">
    <h4>Dodaj akcję dla: {{this._id}}</h4>
    <ul>
        <li>Email: {{this.email}}</li>
        <li>Nr.telfonu: {{this.phoneNumber}}</li>
    </ul>

    <form action="//{{_id}}/" method="POST">
        <div class="form-group1">
            <label for="date">Data Spotkania:</label>
            <input type="date" id="date" name="date" required>
        </div>
        <div class="form-group2">
            <label for="type">Rodzaj akcji</label>
            <select name="type" id="type">
                <option value="call">Telefon</option>
                <option value="meeting">Spotkanie</option>
                <option value="other">Inne</option>
            </select>
        </div>
        <div class="form-group3">
            <label for="description">Opis:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Przypisz akcję</button>
    </form>
</div>